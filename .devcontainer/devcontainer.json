// .devcontainer/devcontainer.json
{
    "name": "Python & Streamlit Workspace",
    "build": {
      // Set build context to parent folder so root files are available
      "context": "..",
      "dockerfile": "Dockerfile"
    },
    "forwardPorts": [8501],
    "containerEnv": {
      "OPENAI_API_KEY": "${localEnv:OPENAI_API_KEY}"
    },
    "customizations": {
      "vscode": {
        "extensions": [
          "ms-python.python",
          "ms-python.vscode-pylance",
          "ms-python.vscode-streamlit"
        ]
      }
    },
    "postCreateCommand": "pip install --upgrade pip && pip install -r /workspace/requirements.txt",
    "postStartCommand": "streamlit run app.py --server.port 8501 --server.address 0.0.0.0"
  }